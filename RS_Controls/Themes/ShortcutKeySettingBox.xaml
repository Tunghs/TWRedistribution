<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:Controls="clr-namespace:RS_Controls.Controls">

    <Style TargetType="{x:Type Controls:ShortcutKeySettingBox}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Controls:ShortcutKeySettingBox}">
                    <Grid Height="30">
                        <TextBox x:Name="ShortcutKeyName_TextBox" IsReadOnly="True"
                                     Text="{TemplateBinding ShortcutKey}" VerticalAlignment="Center"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
    